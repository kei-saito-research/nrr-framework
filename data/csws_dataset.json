{
  "description": "CSWS (Context-Switch Word Sense) dataset configuration",
  "reference": "arXiv:2512.13478, Section 6.5",
  "task": {
    "name": "Turn 1 Entropy Measurement",
    "ambiguous_word": "bank",
    "senses": ["financial institution", "river bank"],
    "turn1_template": "The bank is {adj}.",
    "neutral_adjectives": ["solid", "stable", "old", "new", "quiet", "large"]
  },
  "context_cues": {
    "financial": ["investor", "account", "loan", "deposit", "money", "interest"],
    "river": ["ducks", "river", "water", "fish", "boat", "shore"]
  },
  "experiment_config": {
    "n_train": 1000,
    "n_test": 100,
    "embed_dim": 32,
    "hidden_dim": 64,
    "epochs": 100,
    "batch_size": 32,
    "learning_rate": 0.1,
    "seeds": [42, 123, 456, 789, 1000]
  }
}
